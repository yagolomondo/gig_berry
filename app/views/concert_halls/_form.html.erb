        <div class="error-container" style="background-color: black">
          <ul>
            <% @concert_hall.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

  <div class="card-new-concerthall">
      <div class="description-new">
      <p>
