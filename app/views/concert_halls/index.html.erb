<% if policy(ConcertHall).create? %>
  <p><%= link_to "Add Concert Hall", new_concert_hall_path %></p>
<% end %>

<class class="flexbox">
  <!-- CARDS -->
  <div class="cards">
    <% @concert_halls.each do |concert_hall| %>
      <div>
        <p><%= link_to concert_hall.name, concert_hall_path(concert_hall) %></p>
        <%= cl_image_tag concert_hall.photos[0].key, height: 300, width: 400, crop: :fill %>
      </div>
    <% end %>
  </div>

  <!-- MAP -->
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</class>
